FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies with legacy peer deps
RUN npm install --legacy-peer-deps

# Copy project files
COPY . .

# Expose Vite's default port
EXPOSE 5173

# Run Vite in development mode
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]