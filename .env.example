# ===================================
# ARTYCO FINANCIAL APP - Environment Variables
# ===================================
# Copy this file to .env and fill with your actual values
# Never commit .env to version control!

# ===================================
# DATABASE CONFIGURATION
# ===================================
# Local Development (Docker)
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_DATABASE=artyco_financial_rbac
MYSQL_USER=artyco_user
MYSQL_PASSWORD=your_db_password_here
MYSQL_PORT=3307

# Production Database (Cloud SQL, RDS, etc.)
# DB_HOST=your-cloud-sql-instance
# DB_PORT=3306
# DB_NAME=your_database_name
# DB_USER=your_database_user
# DB_PASSWORD=your_database_password

# ===================================
# APPLICATION PORTS
# ===================================
FRONTEND_PORT=3001
BACKEND_PORT=8000
PHPMYADMIN_PORT=8081

# ===================================
# ENVIRONMENT
# ===================================
NODE_ENV=development
ENVIRONMENT=development
# Options: development, staging, production

# ===================================
# API CONFIGURATION
# ===================================
# Vite uses VITE_ prefix for client-side env vars
VITE_API_BASE_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000/api

# Backend API settings
API_HOST=0.0.0.0
API_PORT=8000

# ===================================
# SECURITY & AUTHENTICATION
# ===================================
# Generate a secure secret: openssl rand -hex 32
JWT_SECRET_KEY=change-this-to-a-random-secure-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration
CORS_ORIGINS=http://localhost:3001,http://localhost:5173
# Production example: https://yourdomain.com,https://www.yourdomain.com

BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=60

# ===================================
# AI BRAIN SYSTEM (Optional)
# ===================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
BRAIN_LOG_LEVEL=INFO

# ===================================
# FILE UPLOAD SETTINGS
# ===================================
MAX_FILE_SIZE=100M
UPLOAD_DIR=uploads

# ===================================
# ANALYSIS SETTINGS
# ===================================
DEFAULT_COMPANY_ID=1
ANALYSIS_CACHE_DURATION=300

# ===================================
# DEVELOPMENT SETTINGS
# ===================================
DEBUG=true
RELOAD=true

# ===================================
# CLOUD DEPLOYMENT (Google Cloud Run, etc.)
# ===================================
# Uncomment and configure for cloud deployment
# GOOGLE_CLOUD_PROJECT=your-project-id
# CLOUD_SQL_CONNECTION_NAME=project:region:instance
# INSTANCE_CONNECTION_NAME=project:region:instance
# CLOUD_STORAGE_BUCKET=your-bucket-name

# ===================================
# SITEGROUND SPECIFIC (if deploying there)
# ===================================
# SITEGROUND=true
# SITEGROUND_PROJECT_ROOT=/home/customer/www/your-domain/public_html
